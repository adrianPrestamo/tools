# Simple utility to dump binary files as byte arrays

# Creates a byte array literal, suitable for many languages.
_create_array() {
	echo -n '['
	hexdump -ve '8/1 "%4u," "\n"' $@ |\
		sed -e 's/\[ /[/' \
			-e '$s/\([[:space:]]*,[[:space:]]*\)*$/]/'
}

# Prints help
usage() {
	cat <<EOF
binarr - binary file to byte array

Usage $(basename $0) binary_file

Generate byte arrays from binary files
EOF
}

# Main
case $1 in
	-h|--help)
		usage
	;;
	*)
		_create_array $@
	;;
esac

